{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/stories/**/*",
    "**/*.stories.*",
    "**/*.test.*",
    "node_modules"
  ]
}
